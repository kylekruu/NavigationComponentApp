<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context="com.kylekruu.proj.EnterNameFragment">


    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintVertical_bias=".4"
            app:layout_constraintRight_toLeftOf="@+id/cancel_btn"
            android:id="@+id/next_btn"
            android:text="next"
    />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/next_btn"
            app:layout_constraintVertical_bias=".4"
            android:id="@+id/cancel_btn"
            android:text="cancel"
    />

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/input_name"
            app:layout_constraintStart_toStartOf="@+id/next_btn"
            app:layout_constraintEnd_toEndOf="@+id/cancel_btn"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="196dp"
            app:layout_constraintHorizontal_bias="0.488"
            android:hint="Your Name" />


</androidx.constraintlayout.widget.ConstraintLayout>